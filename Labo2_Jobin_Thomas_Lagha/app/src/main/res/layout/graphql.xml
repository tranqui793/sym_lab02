<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/choixAuteur"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="46dp"
        android:text="@string/choixAuteur"
        app:layout_constraintEnd_toStartOf="@+id/spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="46dp"
        app:layout_constraintBottom_toTopOf="@+id/posteAuteur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/choixAuteur"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/posteAuteur"
        android:layout_width="384dp"
        android:layout_height="19dp"
        android:layout_marginBottom="455dp"
        android:layout_marginTop="23dp"
        android:text="@string/posteAuteur"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choixAuteur"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/responseTestt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:inputType="textMultiLine" />
</android.support.constraint.ConstraintLayout>